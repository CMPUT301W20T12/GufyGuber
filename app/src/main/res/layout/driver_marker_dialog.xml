<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ride_request_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="RIDE REQUEST TITLE"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#fff"
        android:textSize="15dp"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/ride_request_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RIDER INFO HERE"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:textColor="#000"
        android:textStyle="normal"
        android:gravity="center"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/decline_ride_request_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Decline"
            android:theme="@style/ThemeOverlay.LightButton"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/accept_ride_request_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Accept"
            android:theme="@style/ThemeOverlay.LightButton"/>
    </LinearLayout>

</LinearLayout>