<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    tools:context=".RegisterUserActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".RegisterUserActivity"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_image"
                    android:layout_width="136dp"
                    android:layout_height="136dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_menu_profile"
                    android:layout_gravity="center_horizontal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rider_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:autoSizeMaxTextSize="30sp"
                        android:autoSizeMinTextSize="12sp"
                        android:enabled="false"
                        android:text="Driver's Email"
                        android:textColor="#000"
                        android:gravity="center"
                        android:textSize="25sp"/>
                    <!-- android:textSize="25sp" /> -->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="30dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/thumbsup" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:textColor="#000"
                        android:textSize="30sp"
                        android:text="99%"
                        android:paddingHorizontal="20dp"
                        android:id="@+id/positive"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="13.7dp"
                        app:srcCompat="@drawable/thumbsdown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:textColor="#000"
                        android:textSize="30sp"
                        android:text="99%"
                        android:paddingHorizontal="20dp"
                        android:id="@+id/negative"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="60dp"
                        android:text="Name"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/user_first_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:textColor="#000"
                        android:paddingHorizontal="15dp"

                        android:text="First Name"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeMaxTextSize="30sp"/>
                        <!--android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="25sp" /> -->

                    <EditText
                        android:id="@+id/user_last_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:textColor="#000"
                        android:text="Last Name"
                        android:paddingHorizontal="15dp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeMaxTextSize="30sp"/>
                        <!--android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="25sp" /> -->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="60dp"
                        android:text="Phone"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/rider_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:textColor="#000"
                        android:paddingHorizontal="15dp"
                        android:text="Phone Number"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeMaxTextSize="30sp"
                        android:inputType="phone"/>
                        <!--android:textSize="25sp" /> -->

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vehicle_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Vehicle info:"
                        android:textSize="20sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/edit_make_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Make"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/make"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:enabled="false"
                        android:textColor="#000"
                        android:text="Make"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeMaxTextSize="30sp"/>
                        <!-- android:textSize="20sp" /> -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Model"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/model"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:enabled="false"
                        android:textColor="#000"
                        android:text="Model"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeMaxTextSize="30sp"/>
                        <!-- android:textSize="20sp" /> -->

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/edit_plate_seat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Plate"
                        android:textStyle="bold"

                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/plate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:enabled="false"
                        android:textColor="#000"
                        android:text="Plate"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeMaxTextSize="30sp"/>
                        <!-- android:textSize="20sp" /> -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Seats"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/seats"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:enabled="false"
                        android:text="Seats"
                        android:textColor="#000"
                        android:inputType="number"
                        android:digits="1234567890"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeMaxTextSize="30sp"/>
                        <!-- android:textSize="20sp" /> -->

                </LinearLayout>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
        <Button
            android:id="@+id/edit_profile_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/edit_profile"
            android:textAllCaps="false"
            android:theme="@style/ThemeOverlay.LightButton"
            android:layout_margin="15dp"/>

        <Button
            android:id="@+id/save_profile_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/save_profile"
            android:textAllCaps="false"
            android:visibility="gone"
            android:theme="@style/ThemeOverlay.LightButton"
            android:layout_margin="15dp"/>
</LinearLayout>
